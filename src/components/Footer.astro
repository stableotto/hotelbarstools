---
// Footer component - Site footer with navigation and contact information
// Following rules: clear naming, accessibility, proper organization

// Footer data - later will be moved to content collections (DRY principle)
const currentYear = new Date().getFullYear();

// Navigation links for footer (reusable data structure)
const footerNav = {
  products: [
    { label: 'Executive Collection', href: '/collections/executive' },
    { label: 'Modern Minimalist', href: '/collections/modern-minimalist' },
    { label: 'Classic Luxury', href: '/collections/classic-luxury' },
    { label: 'Industrial Chic', href: '/collections/industrial-chic' }
  ],
  company: [
    { label: 'About Us', href: '/about' },
    { label: 'Our Process', href: '/process' },
    { label: 'Quality Guarantee', href: '/quality' },
    { label: 'Sustainability', href: '/sustainability' }
  ],
  support: [
    { label: 'Contact Us', href: '/contact' },
    { label: 'Installation Guide', href: '/installation' },
    { label: 'Maintenance Tips', href: '/maintenance' },
    { label: 'FAQ', href: '/faq' }
  ]
};

// Social media links (properly structured data)
const socialLinks = [
  {
    platform: 'LinkedIn',
    url: 'https://linkedin.com/company/hotelbarstools',
    ariaLabel: 'Follow us on LinkedIn'
  },
  {
    platform: 'Instagram', 
    url: 'https://instagram.com/hotelbarstools',
    ariaLabel: 'Follow us on Instagram'
  }
];

// Contact information (centralized data)
const contactInfo = {
  email: 'info@hotelbarstools.com',
  phone: '+1 (555) 123-4567',
  address: {
    street: '123 Design District',
    city: 'New York',
    state: 'NY',
    zip: '10001',
    country: 'USA'
  }
};
---

<footer class="footer" role="contentinfo">
  <div class="container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Company Info Column -->
      <div class="footer-column footer-brand">
        <a href="/" class="footer-logo" aria-label="Hotel Bar Stools Home">
          <img 
            src="/images/logo.svg" 
            alt="Hotel Bar Stools" 
            width="180" 
            height="60"
            loading="lazy"
          />
        </a>
        
        <p class="footer-description">
          Premium bar stools designed specifically for hotels, restaurants, and commercial spaces. 
          Quality craftsmanship meets elegant design.
        </p>
        
        <!-- Contact Information -->
        <div class="contact-info">
          <div class="contact-item">
            <svg class="contact-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2"/>
              <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2"/>
            </svg>
            <a href="mailto:info@hotelbarstools.com" class="contact-link">
              info@hotelbarstools.com
            </a>
          </div>
          
          <div class="contact-item">
            <svg class="contact-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" stroke="currentColor" stroke-width="2"/>
            </svg>
            <a href="tel:+15551234567" class="contact-link">
              +1 (555) 123-4567
            </a>
          </div>
        </div>
        
        <!-- Social Media Links -->
        <div class="social-links">
          {socialLinks.map((social) => (
            <a 
              href={social.url}
              class="social-link"
              aria-label={social.ariaLabel}
              target="_blank"
              rel="noopener noreferrer"
            >
              {social.platform === 'LinkedIn' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" stroke="currentColor" stroke-width="2"/>
                  <rect x="2" y="9" width="4" height="12" stroke="currentColor" stroke-width="2"/>
                  <circle cx="4" cy="4" r="2" stroke="currentColor" stroke-width="2"/>
                </svg>
              )}
              {social.platform === 'Instagram' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"/>
                  <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" stroke="currentColor" stroke-width="2"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Navigation Columns -->
      <div class="footer-column">
        <h3 class="footer-heading">Products</h3>
        <nav aria-label="Product navigation">
          <ul class="footer-nav-list">
            {footerNav.products.map((item) => (
              <li class="footer-nav-item">
                <a href={item.href} class="footer-nav-link">
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
      
      <div class="footer-column">
        <h3 class="footer-heading">Company</h3>
        <nav aria-label="Company navigation">
          <ul class="footer-nav-list">
            {footerNav.company.map((item) => (
              <li class="footer-nav-item">
                <a href={item.href} class="footer-nav-link">
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
      
      <div class="footer-column">
        <h3 class="footer-heading">Support</h3>
        <nav aria-label="Support navigation">
          <ul class="footer-nav-list">
            {footerNav.support.map((item) => (
              <li class="footer-nav-item">
                <a href={item.href} class="footer-nav-link">
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="copyright">
          Â© {currentYear} Hotel Bar Stools. All rights reserved.
        </p>
        
        <nav class="footer-legal" aria-label="Legal navigation">
          <ul class="footer-legal-list">
            <li>
              <a href="/privacy" class="footer-legal-link">Privacy Policy</a>
            </li>
            <li>
              <a href="/terms" class="footer-legal-link">Terms of Service</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: var(--space-xl) 0 var(--space-md);
    margin-top: auto;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    margin-bottom: var(--space-xl);
  }

  .footer-column {
    display: flex;
    flex-direction: column;
  }

  /* Brand Column */
  .footer-brand {
    order: -1;
  }

  .footer-logo img {
    filter: brightness(0) invert(1);
    transition: opacity var(--transition-fast);
  }

  .footer-logo:hover img,
  .footer-logo:focus img {
    opacity: 0.8;
  }

  .footer-description {
    margin: var(--space-md) 0;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    max-width: 400px;
  }

  /* Contact Information */
  .contact-info {
    margin: var(--space-md) 0;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }

  .contact-icon {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .contact-link {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .contact-link:hover,
  .contact-link:focus {
    color: var(--color-accent);
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: var(--space-sm);
    margin-top: var(--space-md);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.9);
    transition: all var(--transition-fast);
    text-decoration: none;
  }

  .social-link:hover,
  .social-link:focus {
    background-color: var(--color-accent);
    color: var(--color-white);
    transform: translateY(-2px);
  }

  /* Navigation Columns */
  .footer-heading {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--color-accent);
  }

  .footer-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-nav-item {
    margin-bottom: var(--space-xs);
  }

  .footer-nav-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color var(--transition-fast);
    display: block;
    padding: var(--space-xs) 0;
  }

  .footer-nav-link:hover,
  .footer-nav-link:focus {
    color: var(--color-accent);
  }

  /* Footer Bottom */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: var(--space-md);
  }

  .footer-bottom-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: center;
    text-align: center;
  }

  .copyright {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  .footer-legal-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    list-style: none;
    margin: 0;
    padding: 0;
    justify-content: center;
  }

  .footer-legal-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: color var(--transition-fast);
  }

  .footer-legal-link:hover,
  .footer-legal-link:focus {
    color: var(--color-accent);
  }

  /* Responsive Design */
  @media (min-width: 768px) {
    .footer-main {
      grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: var(--space-xl);
    }

    .footer-brand {
      order: 0;
    }

    .footer-bottom-content {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  @media (min-width: 1024px) {
    .footer {
      padding: calc(var(--space-xl) * 1.5) 0 var(--space-lg);
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .footer-logo img,
    .contact-link,
    .social-link,
    .footer-nav-link,
    .footer-legal-link {
      transition: none;
    }

    .social-link:hover,
    .social-link:focus {
      transform: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .footer {
      border-top: 3px solid var(--color-accent);
    }
  }
</style> 